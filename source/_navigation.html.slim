nav.navbar.fixed-top.navbar-expand-lg.navbar-dark
  = link_to 'Future Condo', '/home.html', class: 'navbar-brand'
  button.navbar-toggler type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation"
    span.navbar-toggler-icon
  #navbarNav.collapse.navbar-collapse
    ul.navbar-nav.ml-md-auto
      li.nav-item
        a.nav-link href="/"
          | Covid Plan
      - sitemap.find_resource_by_path('index.html').children.sort {|a, b| a.path <=> b.path }.each do |resource|
        - next if resource.data.skip_nav
        li.nav-item
          - if resource == current_page
            .navbar-text
              = resource.data.headline
          - else
            = link_to resource.data.headline, resource.path, class: 'nav-link'
      li.nav-item
        a.nav-link href="https://www.facebook.com/FutureCondoStudio/" title="Future Condo on Facebook"
          i.fab.fa-facebook
      li.nav-item
        a.nav-link href="mailto:futurecondo@gmail.com" title="email Future Condo"
          i.far.fa-envelope
